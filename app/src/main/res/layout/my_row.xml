<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id ="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5EEFB990"
            android:padding="12dp">

            <TextView
                android:id="@+id/mobile_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#000"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mobile_brand_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="Apple"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/mobile_id_txt"
                app:layout_constraintTop_toTopOf="@+id/mobile_id_txt" />

            <TextView
                android:id="@+id/mobile_model_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="iPhone X"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/mobile_brand_txt"
                app:layout_constraintStart_toEndOf="@+id/mobile_brand_txt" />

            <TextView
                android:id="@+id/mobile_condition_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="New"
                app:layout_constraintStart_toStartOf="@+id/mobile_brand_txt"
                app:layout_constraintTop_toBottomOf="@+id/mobile_brand_txt" />

            <TextView
                android:id="@+id/mobile_price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Rs 95,000"
                app:layout_constraintStart_toStartOf="@+id/mobile_condition_txt"
                app:layout_constraintTop_toBottomOf="@+id/mobile_condition_txt" />

            <TextView
                android:id="@+id/mobile_description_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Phone is good condition"
                app:layout_constraintStart_toStartOf="@+id/mobile_price_txt"
                app:layout_constraintTop_toBottomOf="@+id/mobile_price_txt" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>